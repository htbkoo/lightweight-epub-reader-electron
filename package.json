{
  "name": "lightweight-epub-reader-electron",
  "version": "0.3.1",
  "description": " A lightweight epub-reader desktop app created with electron",
  "main": "./dist/main/main.js",
  "scripts": {
    "watch": "tsc -w -p tsconfig-build.json",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "build-main": "tsc -p tsconfig-build.json",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "npm run build-main && npm run build-renderer",
    "start-main-dev": "npm run build-main && electron ./dist/main/main.js",
    "start-renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-dev": "cross-env START_HOT=1 npm run start-renderer-dev",
    "start": "npm run start-dev",
    "start-prod-local": "npm run build && cross-env NODE_ENV=production electron .",
    "test": "jest --config jest-unit.config.js",
    "test:watch": "jest --watch --config jest-unit.config.js",
    "pretest:e2e": "npm run build",
    "test:e2e": "jest --config test/e2e/jest-e2e.config.js",
    "dep:clean": "rimraf node_modules",
    "dep:install-no-optional": "npm i --no-optional",
    "clean:dist": "rimraf dist",
    "clean:release": "rimraf release",
    "clean": "npm run clean:dist && npm run clean:release",
    "dist": "npm run dep:clean --silent || npm run dep:install-no-optional && npm run clean && npm run build && cross-env NODE_ENV=production electron-builder"
  },
  "repository": "https://github.com/htbkoo/lightweight-epub-reader-electron",
  "keywords": [
    "epub",
    "lightweight",
    "reader",
    "Electron",
    "quick",
    "start",
    "typescript"
  ],
  "author": "htbkoo",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@hot-loader/react-dom": "^16.12.0",
    "@types/dompurify": "^2.0.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^25.1.3",
    "@types/jquery": "^3.3.33",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.9",
    "@types/react-test-renderer": "^16.8.1",
    "@types/webdriverio": "4.8.x",
    "@types/webpack-env": "^1.13.3",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.0",
    "css-loader": "^3.4.2",
    "electron": "15.x.x",
    "electron-builder": "^22.3.2",
    "electron-devtools-installer": "^2.2.4",
    "file-loader": "^5.1.0",
    "fork-ts-checker-webpack-plugin": "^4.0.5",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^6.0.0",
    "jest": "^25.1.0",
    "react-hot-loader": "^4.12.19",
    "react-test-renderer": "^16.13.0",
    "redux-devtools-extension": "^2.13.8",
    "rimraf": "^3.0.2",
    "source-map-loader": "^0.2.4",
    "spectron": "10.x.x",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.2.1",
    "tslint": "^5.19.0",
    "typescript": "^3.6.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.9.1",
    "dompurify": "^2.0.8",
    "electron-is-dev": "^1.1.0",
    "epub-chinese-converter": "0.1.6",
    "jquery": "^3.4.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "typesafe-actions": "^5.1.0"
  }
}
