{
  "name": "lightweight-epub-reader-electron",
  "version": "0.5.0",
  "description": " A lightweight epub-reader desktop app created with electron",
  "main": ".webpack/main",
  "scripts": {
    "----Electron Forge----": "--------------------------------",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "----old----": "--------------------------------",
    "watch": "tsc -w -p tsconfig-build.json",
    "build-main": "tsc -p tsconfig-build.json",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "npm run build-main && npm run build-renderer",
    "start-main-dev": "npm run build-main && electron ./dist/main/main.js",
    "start-renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-dev": "cross-env START_HOT=1 npm run start-renderer-dev",
    "start-prod-local": "npm run build && cross-env NODE_ENV=production electron .",
    "test": "jest --config jest-unit.config.js",
    "test:watch": "jest --watch --config jest-unit.config.js",
    "pretest:e2e": "npm run build",
    "test:e2e": "jest --config test/e2e/jest-e2e.config.js",
    "dep:clean": "rimraf node_modules",
    "dep:install-no-optional": "npm i --no-optional",
    "clean:dist": "rimraf dist",
    "clean:release": "rimraf release",
    "clean": "npm run clean:dist && npm run clean:release",
    "dist:without-install": "npm run clean && npm run build && cross-env NODE_ENV=production electron-builder",
    "dist": "npm run dep:clean --silent || npm i && npm run dist:without-install"
  },
  "repository": "https://github.com/htbkoo/lightweight-epub-reader-electron",
  "keywords": [
    "epub",
    "lightweight",
    "reader",
    "Electron",
    "quick",
    "start",
    "typescript"
  ],
  "author": "htbkoo",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/plugin-webpack": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "css-loader": "^6.11.0",
    "electron": "30.0.8",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "node-loader": "^2.0.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "engines": {
    "node": ">=18"
  }
}
